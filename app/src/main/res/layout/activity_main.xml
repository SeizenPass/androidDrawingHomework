<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.example.kidsdrawingapp.DrawingView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/drawing_view"
        android:background="@drawable/background_drawing_view_layout"
        />
    <ImageButton
        android:layout_marginBottom="80dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/ib_brush"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_brush"
        android:contentDescription="brush image"
        android:scaleType="fitXY"
        android:layout_margin="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_horizontal"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bBlack"
            android:src="@drawable/black"
            />
        <ImageButton
            android:src="@drawable/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bGreen"/>
        <ImageButton
            android:src="@drawable/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bRed"/>
        <ImageButton
            android:src="@drawable/purple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bPurple"/>
        <ImageButton
            android:src="@drawable/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bWhite"/>
        <ImageButton
            android:src="@drawable/yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bYellow"/>
        <ImageButton
            android:src="@drawable/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bBlue"/>
        <ImageButton
            android:src="@drawable/eraser"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/bEraser"
            android:scaleType="fitXY"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>